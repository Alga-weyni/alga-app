# üîê Alga Environment Variables
# Copy this file to .env and fill in your values

# ===== Database =====
# For Docker: use the container name
DATABASE_URL=postgresql://alga:alga_secure_password@db:5432/alga_db

# PostgreSQL credentials (for docker-compose)
POSTGRES_USER=alga
POSTGRES_PASSWORD=alga_secure_password
POSTGRES_DB=alga_db

# ===== Application =====
NODE_ENV=production
PORT=5000

# ===== Session Secret =====
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ===== SendGrid (Email) =====
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@alga.et
SENDGRID_FROM_NAME=Alga

# ===== Google Maps API =====
# Frontend (required for interactive maps)
VITE_GOOGLE_MAPS_API_KEY=AIza-your-google-maps-api-key
# Backend (optional, if needed for server-side geocoding)
GOOGLE_MAPS_API_KEY=AIza-your-google-maps-api-key

# ===== Stripe Payment =====
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===== PayPal Payment =====
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # Change to 'live' for production

# ===== Telebirr Payment =====
TELEBIRR_APP_ID=your-telebirr-app-id
TELEBIRR_APP_KEY=your-telebirr-app-key
TELEBIRR_PUBLIC_KEY=your-telebirr-public-key
TELEBIRR_SHORT_CODE=your-short-code

# ===== Ethiopian Telecom SMS =====
ETHIO_TELECOM_API_KEY=your-ethio-telecom-api-key
ETHIO_TELECOM_SENDER_ID=ALGA

# ===== Fayda ID Verification (Ethiopia National Digital Identity) =====
# Required for production mode with NIDP integration
# Leave empty for sandbox mode (accepts any 12-digit number for testing)
FAYDA_API_BASE_URL=https://api.fayda.id.et
FAYDA_CLIENT_ID=your-fayda-client-id
FAYDA_SECRET_KEY=your-fayda-secret-key
FAYDA_PARTNER_API_KEY=your-fayda-partner-api-key

# ===== Frontend URLs (for CORS) =====
FRONTEND_URL=https://alga.et
ALLOWED_ORIGINS=https://alga.et,https://www.alga.et

# ===== Security =====
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ===== Production Database Seeding =====
# Secure key for seeding production database with sample properties
# Generate a new one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SEED_KEY=your-secure-random-admin-seed-key
